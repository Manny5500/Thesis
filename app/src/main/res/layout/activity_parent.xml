<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F48024"
    tools:context=".ParentActivity">

    <ImageView
        android:id="@+id/btnParentProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="Profile"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toStartOf="@+id/btnChildren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_people_alt_24" />

    <ImageView
        android:id="@+id/btnChildren"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Children"
        app:layout_constraintEnd_toStartOf="@+id/btnLogOut"
        app:layout_constraintStart_toEndOf="@id/btnParentProfile"
        app:layout_constraintTop_toTopOf="@+id/btnParentProfile"
        app:srcCompat="@drawable/baseline_child_care_24" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnParentProfile">

    </FrameLayout>

    <ImageView
        android:id="@+id/btnLogOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F48024"
        android:contentDescription="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnChildren"
        app:layout_constraintTop_toTopOf="@+id/btnChildren"
        app:srcCompat="@drawable/baseline_login_24"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>