<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentDashboard">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="#bfadcc"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="208dp"
            android:layout_height="90dp"
            android:text="Total Assessment Conducted"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/txtTotalAssessment"
            android:layout_width="81dp"
            android:layout_height="82dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/textView25"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="#f2bae4"
            app:layout_constraintBottom_toTopOf="@+id/ViewRecommendation"
            app:layout_constraintEnd_toEndOf="@+id/ViewRecommendation"
            app:layout_constraintStart_toStartOf="@+id/ViewRecommendation"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="213dp"
            android:layout_height="90dp"
            android:text="Total Malnourished Cases"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/txtTotalMalnourished"
            android:layout_width="90dp"
            android:layout_height="81dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toStartOf="@+id/textView38"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <View
            android:id="@+id/ViewRecommendation"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:background="#dfbbda"
            app:layout_constraintBottom_toTopOf="@+id/priorityView"
            app:layout_constraintEnd_toEndOf="@+id/priorityView"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="@+id/priorityView"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="208dp"
            android:layout_height="71dp"
            android:text="General Recommendation"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ViewRecommendation"
            app:layout_constraintTop_toTopOf="@+id/ViewRecommendation" />

        <View
            android:id="@+id/priorityView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:background="#896790"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ViewRecommendation" />

        <TextView
            android:id="@+id/textPriority"
            android:layout_width="90dp"
            android:layout_height="81dp"
            android:text="..."
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/priorityView"
            app:layout_constraintEnd_toStartOf="@+id/textView41"
            app:layout_constraintStart_toStartOf="@+id/priorityView"
            app:layout_constraintTop_toTopOf="@+id/priorityView" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="208dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:text="Priority Cases"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/priorityView"
            app:layout_constraintTop_toTopOf="@+id/priorityView" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="97dp"
            android:layout_height="123dp"
            android:src="@drawable/baseline_priority_high_24"
            app:layout_constraintBottom_toBottomOf="@+id/ViewRecommendation"
            app:layout_constraintEnd_toStartOf="@+id/textView40"
            app:layout_constraintStart_toStartOf="@+id/ViewRecommendation"
            app:layout_constraintTop_toTopOf="@+id/ViewRecommendation" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>