<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentProfile">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageParent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="28dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="PROFILE"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/imageParent"
            app:layout_constraintStart_toStartOf="@+id/imageParent"
            app:layout_constraintTop_toBottomOf="@+id/imageParent" />

        <TextView
            android:id="@+id/labelParentProfileName"
            android:layout_width="76dp"
            android:layout_height="22dp"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-2dp" />

        <TextView
            android:id="@+id/textParentProfileName"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Abcde F. Ghij"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:text=":"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textParentProfileName" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="16dp"
            android:layout_height="21dp"
            android:text=":"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textParentProfileAge" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:text=":"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toTopOf="@+id/textParentProfileAddress" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:text=":"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/textParentProfileEmail" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:text=":"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textParentProfileContact" />

        <TextView
            android:id="@+id/textParentProfileAge"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="35"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textParentProfileName" />

        <TextView
            android:id="@+id/textParentProfileAddress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:text="Magdalena, Laguna"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textParentProfileAge" />

        <TextView
            android:id="@+id/textParentProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcd@gmail.com"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textParentProfileAddress" />

        <TextView
            android:id="@+id/textParentProfileContact"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="09123456789"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textParentProfileEmail" />

        <TextView
            android:id="@+id/labelParentProfileAge"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:text="Age"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView17" />

        <TextView
            android:id="@+id/labelParentProfileAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Address"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/labelParentProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView19" />

        <TextView
            android:id="@+id/labelParentProfileContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Contact No"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Delete Account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textParentProfileContact" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>